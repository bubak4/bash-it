# pass-through mode for nested i3 sessions, thanks to: https://faq.i3wm.org/question/1679/toggle-i3s-listening-behavior/post-id-1681%3C/p%3E
mode "pass-through" {
    bindsym $mod+BackSpace mode "default"
}
bindsym $mod+BackSpace mode "pass-through"

bindsym $mod+Tab focus right
bindsym $mod+Shift+Tab focus left
